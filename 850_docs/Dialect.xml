<?xml version="1.0" encoding="UTF-8"?>
<class ID="Dialect">
    <name>Dialect</name>
    <definition>
        <p>A distinct language variety spoken at a given location by a given group.</p>
    </definition>
    <CHECKME who="DS" when="2022-05-17" status="new">is this accurate or should it be renamed to "variety", "vernacular" … ?</CHECKME>
    <properties>
        <property ID="dialect.ID">
            <arity>1</arity>
            <name>ID</name>
            <datatypeName target="identifier"/>
            <note>the dialect identifiers are made up of a three-letter country code + hyphen + three-letter settlement code</note>
        </property>
        <property ID="dialect.name">
            <arity>1</arity>
            <name>Name</name>
            <datatypeName target="shortText"/>
        </property>
        <property ID="dialect.typeOfCommunity">
            <arity>0-n</arity>
            <name>type of community</name>
            <datatypeName target="vocabTerm" vocabRef="vocabs.communityTypes"/>
            <CHECKME who="DS" when="2022-05-17" status="new"></CHECKME>
        </property>
    </properties>
    <relations>
        
        <relation ID="dialectIsSpokenAtLocation">
            <sourceClass target="Dialect">
                <arity>1-n</arity>
            </sourceClass>
            <targetClass target="Place">
                <arity>1-n</arity>
            </targetClass>
            <name>is spoken at</name>
            <reverseName>is place where is spoken</reverseName>
            <note>Documents where a dialect is typically spoken in a place.</note>
            <CHECKME who="DS" when="2022-05-17" status="new">check if n-to-n relation is ok</CHECKME>
        </relation>
        
        <relation ID="dialectHasPersonInCharge">
            <sourceClass target="Dialect">
                <arity>1-n</arity>
            </sourceClass>
            <targetClass target="Person">
                <arity>1</arity>
            </targetClass>
            <name>has person in charge</name>
            <reverseName>is in charge of</reverseName>
            <note>internal procedural information who is the main person in charge of a dialect</note>
        </relation>
        
        <relation ID="DialectExhibitsFeatureRealisation">
            <sourceClass target="Dialect">
                <arity>1</arity>
            </sourceClass>
            <targetClass target="FeatureRealisation">
                <arity>1-n</arity>
            </targetClass>
            <name>exhibits</name>
            <reverseName>is exhibited in</reverseName>
        </relation>
    </relations>
    <mapping targetLanguage="teip5">
        <code language="xml">
            <fs type="dialect" xml:id="ISR-SBE">
                <f name="dialectName">
                    <string>Ṣbēḥ</string>
                </f>
                <f name="place" fVal="geo:galilee"/>
                <f name="typeOfCommunity">
                    <symbol value="tribe"/>
                </f>
                <f name="personInCharge" fVal="dmp:AD"/>
            </fs>
        </code>
    </mapping>
</class>
